<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorAccentGreen">
<!--a comment-->
    <LinearLayout
        android:layout_width="400dp"
        android:layout_height="wrap_content"
        android:background="@color/colorPrimary"
        android:orientation="horizontal"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:padding="20dp">

        <ImageView
            android:id="@+id/imageView"
            android:layout_width="100dp"
            android:layout_height="110dp"
            android:layout_weight="1"
            android:src="@drawable/default_image"
            android:layout_marginRight="20dp"/>

        <LinearLayout
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:layout_weight="3"
            android:orientation="vertical">

            <TextView
                android:id="@+id/nameTitle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="NAME"
                style="@style/subheaderFont"
                android:textSize="22sp"
                android:textColor="@color/colorAccentDark"
                android:layout_marginVertical="2dp"/>

            <TextView
                android:id="@+id/nameContent"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Default name here"
                android:textSize="18sp"
                style="@style/bodyFont"
                android:layout_marginBottom="12dp"/>

            <TextView
                android:id="@+id/needTitle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="NEED"
                style="@style/subheaderFont"
                android:textSize="22sp"
                android:layout_marginVertical="2dp"
                android:textColor="@color/colorAccentDark"/>

            <TextView
                android:id="@+id/needContent"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Type stuff here"
                android:textSize="18sp"
                style="@style/bodyFont"
                android:layout_marginBottom="12dp"/>

            <TextView
                android:id="@+id/currCourTitle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="CURRENT COURSES"
                style="@style/subheaderFont"
                android:textSize="22sp"
                android:layout_marginVertical="2dp"
                android:textColor="@color/colorAccentDark"/>

            <TextView
                android:id="@+id/currCourContent"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Type stuff here"
                android:textSize="18sp"
                style="@style/bodyFont"
                android:layout_marginBottom="12dp"/>

            <TextView
                android:id="@+id/pastCourTitle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="PAST COURSES"
                android:textSize="22sp"
                style="@style/subheaderFont"
                android:layout_marginVertical="2dp"
                android:textColor="@color/colorAccentDark"/>

            <TextView
                android:id="@+id/pastCourContent"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Type stuff here"
                android:textSize="18sp"
                style="@style/bodyFont"
                android:layout_marginBottom="12dp"/>
        </LinearLayout>
    </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>