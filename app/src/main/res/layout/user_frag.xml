<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorAccentGreen">
<!--a comment-->
    <LinearLayout
        android:id="@+id/linearLayout2"
        android:layout_width="400dp"
        android:layout_height="wrap_content"
        android:background="@color/colorPrimary"
        android:orientation="horizontal"
        android:padding="20dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <ImageView
            android:id="@+id/imageView"
            android:layout_width="100dp"
            android:layout_height="110dp"
            android:layout_marginRight="20dp"
            android:layout_weight="1"
            android:src="@drawable/default_image" />

        <LinearLayout
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:layout_weight="3"
            android:orientation="vertical">

            <TextView
                android:id="@+id/nameTitle"
                style="@style/subheaderFont"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginVertical="2dp"
                android:text="NAME"
                android:textColor="@color/colorAccentDark"
                android:textSize="22sp" />

            <TextView
                android:id="@+id/nameContent"
                style="@style/bodyFont"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="12dp"
                android:text="Default name here"
                android:textSize="18sp" />

            <TextView
                android:id="@+id/needTitle"
                style="@style/subheaderFont"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginVertical="2dp"
                android:text="NEED"
                android:textColor="@color/colorAccentDark"
                android:textSize="22sp" />

            <TextView
                android:id="@+id/needContent"
                style="@style/bodyFont"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="12dp"
                android:text="user's needs"
                android:textSize="18sp" />

            <TextView
                android:id="@+id/currCourTitle"
                style="@style/subheaderFont"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginVertical="2dp"
                android:text="CURRENT COURSES"
                android:textColor="@color/colorAccentDark"
                android:textSize="22sp" />

            <TextView
                android:id="@+id/currCourContent"
                style="@style/bodyFont"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="12dp"
                android:text="user's current courses"
                android:textSize="18sp" />

            <TextView
                android:id="@+id/pastCourTitle"
                style="@style/subheaderFont"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginVertical="2dp"
                android:text="PAST COURSES"
                android:textColor="@color/colorAccentDark"
                android:textSize="22sp" />

            <TextView
                android:id="@+id/pastCourContent"
                style="@style/bodyFont"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="12dp"
                android:text="user's past courses"
                android:textSize="18sp" />
        </LinearLayout>

    </LinearLayout>

    <Button
        android:id="@+id/registerButton"
        style="@style/bodyFont"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="648dp"
        android:background="@color/colorAccentDark"
        android:paddingHorizontal="20dp"
        android:text="Click to Create an Account "
        android:textColor="@color/colorPrimary"
        android:textSize="12sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.915"
        app:layout_constraintStart_toStartOf="parent" />

    <Button
        android:id="@+id/loginButton"
        style="@style/bodyFont"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="560dp"
        android:background="@color/colorAccentDark"
        android:paddingHorizontal="20dp"
        android:text="      Click to Sign In      "
        android:textColor="@color/colorPrimary"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.925"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/registerButton"
        app:layout_constraintVertical_bias="0.35" />


</androidx.constraintlayout.widget.ConstraintLayout>