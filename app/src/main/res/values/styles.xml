<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccentGreen</item>

        <item name="android:textColorPrimary">@color/black</item>
        <item name="android:textColorSecondary">@color/white</item>
        <item name="android:windowBackground">@color/white</item>
    </style>

    <style name="headerFont" parent="@android:style/TextAppearance">
        <item name="android:fontFamily">@font/noto_serif_bold</item>
    </style>

    <style name="subheaderFont" parent="@android:style/TextAppearance">
        <item name="android:fontFamily">@font/noto_sans_bold</item>
    </style>

    <style name="bodyFont" parent="@android:style/TextAppearance">
        <item name="android:fontFamily">@font/noto_sans</item>
    </style>

</resources>

